lt:real
Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
  escreval("Quantos sanduíches você precisa fazer?")
  leia(s)
  
  q <- 50
  p <- 50
  h <- 100
  
  l1 <- ((q*2)/1000)*s
  l2 <- (p/1000)*s
  l3 <- (h/1000)*s
  

  escreval("A quantidade de queijo é", l1," Kg")
   escreval("A quantidade de presunto é", l2," Kg")
    escreval("A quantidade de  hambúrguers é", l3," Kg")
